---
import Layout from "../../layouts/Layout.astro";
import LearnPage from "../../components/LearnPage";

// Defense in depth: Verify user is authenticated
// Middleware should already handle this, but we add an extra check
const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/auth/login");
}

// Parse and validate deckId from URL params
const { deckId: deckIdParam } = Astro.params;

// Parse deckId to number
const deckId = parseInt(deckIdParam || "", 10);
